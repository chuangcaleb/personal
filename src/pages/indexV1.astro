---
import Button from "../components/common/Button.astro";
import OverflowScrollArea from "../components/OverflowScrollArea.astro";
import ProjectCard from "../components/projects/ProjectCard.astro";
import TechDeck from "../components/TechDeck.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@constants";
import BaseLayout from "../layouts/BaseLayoutV1.astro";
import Section from "../layouts/Section.astro";
---

<BaseLayout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  isIndex
  hasSpriteProvider
>
  <Section
    variant="dark"
    contentWidth="full"
    class="grid h-[80svh] min-h-fit xl:grid-cols-2"
  >
    <div class="place-self-center text-center xl:text-left 2xl:px-12">
      <div class="grid justify-items-center gap-10 xl:justify-items-start">
        <div class="grid gap-4">
          <h1
            class="m-0 whitespace-nowrap break-keep text-5xl sm:text-7xl md:text-8xl"
          >
            Chuang Caleb
          </h1>
          <h2 class="m-0 text-2xl font-normal sm:text-4xl md:text-5xl">
            Frontend Software Engineer
          </h2>
        </div>
        <div class="flex gap-4">
          <Button class="">Connect with me</Button>
          <Button class="">About me</Button>
        </div>
      </div>
    </div>
    <div>
      <p>some other text</p>
    </div>
  </Section>
  <Section id="projects" paddingX="none">
    <h2 class="mx-4 mt-0 text-4xl xl:mx-0">‚≠êÔ∏è My Favorite Projects</h2>
    <OverflowScrollArea class="flex-col gap-8 sm:flex-row xl:overflow-visible">
      <ProjectCard title="PowerKids Kindergarten" />
      <ProjectCard title="PowerKids Kindergarten" />
      <ProjectCard title="PowerKids Kindergarten" />
    </OverflowScrollArea>
  </Section>
  <Section variant="secondary">
    <div class="max-w-prose">
      <h1>üßë‚ÄçüöÄ Hello, Astronaut!</h1>
      <p>
        Welcome to the official <a href="https://astro.build/">Astro</a> blog starter
        template. This template serves as a lightweight, minimally-styled starting
        point for anyone looking to build a personal website, blog, or portfolio
        with Astro.
      </p>
      <div class="flex flex-wrap gap-2">
        <Button class="btn">Action!</Button>
        <Button class="btn-secondary btn">Action!</Button>
        <Button class="btn-primary btn">Connect with me</Button>
        <Button class="btn-ghost-invert btn">About me</Button>
      </div>
    </div>
  </Section>
  <Section
    variant="dark"
    contentWidth="prose"
    class="grid min-h-screen place-content-center"
  >
    <div class="max-w-prose">
      <h1>üßë‚ÄçüöÄ Hello, Astronaut!</h1>
      <p>
        Welcome to the official <a href="https://astro.build/">Astro</a> blog starter
        template. This template serves as a lightweight, minimally-styled starting
        point for anyone looking to build a personal website, blog, or portfolio
        with Astro.
      </p>
      <div class="flex flex-wrap gap-2">
        <Button class="btn">Action!</Button>
        <Button class="btn-secondary btn">Action!</Button>
        <Button class="btn-primary btn">Connect with me</Button>
        <Button class="btn-ghost-invert btn">About me</Button>
      </div>
    </div>
  </Section>
  <Section>
    <div class="ml-auto max-w-prose text-right">
      <p>
        This template comes with a few integrations already configured in your <code
          >astro.config.mjs</code
        > file. You can customize your setup with <a
          href="https://astro.build/integrations">Astro Integrations</a
        > to add tools like Tailwind, React, or Vue to your project.
      </p>
      <p>Here are a few ideas on how to get started with the template:</p>
      <div class="flex flex-wrap justify-end gap-2">
        <Button class="btn">Action!</Button>
        <Button class="btn-secondary btn">Action!</Button>
        <Button class="btn-primary btn">Connect with me</Button>
        <Button class="btn-ghost btn">About me</Button>
      </div>
    </div>
  </Section>
  <Section noPaddingY paddingX="always">
    <TechDeck
      hasGap
      cards={[
        "Javascript",
        "Typescript",
        "Python",
        "Material UI",
        "React",
        "Astro",
        "Next",
        "Django",
      ]}
      class="border-base-200 dark:border-neutral-focus border-8"
    />
  </Section>
</BaseLayout>
