---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface BaseLayoutProps extends astroHTML.JSX.HTMLAttributes {
  title: string;
  description: string;
  notProse: boolean;
  fullWidth: boolean;
}

const {
  title,
  class: className,
  description,
  notProse,
  fullWidth,
} = Astro.props as BaseLayoutProps;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="dark:bg-invert-bg text-zinc-700 dark:text-zinc-300">
    <Header />
    <main
      class:list={[
        "mx-auto px-4 sm:px-6",
        { "max-w-none": fullWidth },
        { "prose prose-zinc dark:prose-invert": !notProse },
        className,
      ]}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
