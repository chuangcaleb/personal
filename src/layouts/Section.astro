---
interface SectionProps extends astroHTML.JSX.HTMLAttributes {
  fullWidth: boolean;
  verticalPadding: boolean;
  invert: boolean;
}
const {
  fullWidth,
  verticalPadding,
  invert,
  class: className,
} = Astro.props as SectionProps;
---

<section
  class:list={[
    {
      "px-4 xl:px-0 ": !fullWidth,
      "py-12": verticalPadding,
      "prose-p:text-zinc-300 bg-zinc-800 dark:bg-invert-bgSecondary prose-invert":
        invert,
    },
    className,
  ]}
>
  {
    !fullWidth ? (
      <div class="xl:max-w-screen-xl mx-auto">
        <slot />
      </div>
    ) : (
      <slot />
    )
  }
</section>
