---
interface SectionProps extends astroHTML.JSX.HTMLAttributes {
  fullWidth: boolean;
  forehead: boolean;
}
const { fullWidth, forehead, class: className } = Astro.props as SectionProps;
---

<section
  class:list={[
    { "max-w-screen-xl mx-auto": !fullWidth, "pt-12": forehead },
    className,
  ]}
>
  <slot />
</section>
