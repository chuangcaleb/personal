---
import { STACK, TechName, Stage } from "@data/techStack";
import { Sprite } from "astro-iconify";

interface Props {
  name: TechName;
}

const STAGES = {
  researching: "🤔",
  exploring: "👉",
  learning: "✨",
  confident: "⭐️",
  expert: "💫",
} as Record<Stage, string>;

const { name } = Astro.props;

const tech = STACK[name];

const { icon, stage, isInterested, isWork, isFresh } = tech;

const icons = [
  STAGES[stage],
  isInterested && "❤️",
  isWork && "💼",
  isFresh ? "🌿" : "📆",
]
  .filter(Boolean)
  .join("");
---

<div class="rounded-md border bg-cc-space">
  <Sprite name={icon} class="mx-3 mb-1 mt-2 aspect-square w-12" />
  <span class="block p-1 text-center text-sm tracking-widest">
    {icons}
  </span>
</div>
