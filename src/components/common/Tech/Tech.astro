---
import STACK, { TechName, Stage } from "@data/techStack";
import { Sprite } from "astro-iconify";

interface Props {
  name: TechName;
}

const STAGES = {
  researching: "🤔",
  exploring: "👉",
  learning: "✨",
  confident: "⭐️",
  expert: "💫",
} as Record<Stage, string>;

const { name } = Astro.props;

const tech = STACK[name];

const { icon, stage, isInterested, isWork, isFresh } = tech;

const iconName = typeof icon === "string" ? icon : icon.name;

const iconColor = typeof icon === "object" && icon.color;

const icons = [
  STAGES[stage],
  isInterested && "❤️",
  isWork && "💼",
  isFresh && "🌿",
]
  .filter(Boolean)
  .join("");
---

<button class="rounded-md border bg-cc-space text-cc-white">
  <h3 class="sr-only">{name}</h3>
  <Sprite
    name={iconName}
    class="mx-3 mb-1 mt-2 aspect-square w-12"
    style={{ color: iconColor }}
  />
  <span class="block p-1 text-center text-sm tracking-widest">
    {icons}
  </span>
</button>
