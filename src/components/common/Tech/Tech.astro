---
import { STACK, TechName } from "@data/techStack";
import { Sprite } from "astro-iconify";

interface Props {
  name: TechName;
}

const { name } = Astro.props;

const tech = STACK[name];

const { icon } = tech;
---

<div class="flex rounded-md bg-cc-space dark:border">
  <Sprite name={icon} class="aspect-square w-16 rounded-l-md" />
  <span class="text-flow-vertical p-1 text-xs tracking-widest">✨❤️💼🌿</span>
</div>
