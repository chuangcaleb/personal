---
import HeaderLink from "./HeaderLink.astro";
interface Props {
  index?: boolean;
}
const { index } = Astro.props;
---

<header
  class:list={[
    "max-w-screen-xl mx-auto px-4 xlPadded:px-0 min-h-fit",
    { "absolute z-10 inset-0": index },
  ]}
>
  <nav
    class:list={[
      "py-2 flex h-12",
      { "justify-end": index },
      { "justify-between": !index },
    ]}
  >
    {
      !index && (
        <a href="/" class="hover:underline">
          <h2 class="text-2xl xl:text-3xl">
            <span class="font-light">Chuang</span>
            <span class="font-extrabold">Caleb</span>
          </h2>
        </a>
      )
    }
    <ul class:list={["flex gap-6 my-auto", { "text-zinc-300": index }]}>
      <HeaderLink href="/blog">blog</HeaderLink>
      <HeaderLink href="/about">about</HeaderLink>
    </ul>
  </nav>
</header>
