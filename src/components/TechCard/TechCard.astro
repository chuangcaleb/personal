---
import TechStack from "../../data/TechStack";
import type { TechTitle } from "../../data/TechStack";
import CardIcon from "./CardIcon.astro";
import CardBody from "./CardBody/CardBody.astro";
import CardHeader from "./CardHeader.astro";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  title: TechTitle;
  fadeBody?: boolean;
}
const { title, fadeBody, class: extraClass, ...attrs } = Astro.props;
const techCard = TechStack[title];
const { grade, icon } = techCard;
---

<div
  class:list={[
    "snap-start relative ml-3 mt-3 flex h-48 max-w-fit rounded-xl border border-secondary-focus bg-secondary text-secondary-content hover:text-white hover:shadow-xl cursor-default",
    extraClass,
  ]}
  {...attrs}
>
  <CardHeader title={title} grade={grade} />
  <CardIcon icon={icon} />
  <CardBody {...techCard} fadeBody={fadeBody} />
</div>

<style>
  @font-face {
    font-family: "bit";
    src: url("/8Bit-44Pl.ttf");
  }
</style>
