---
import type { TechTitle } from "../../data/TechStack";
import type { TechCardGrade } from "../../data/TechStack/types";

interface Props {
  title: TechTitle;
  grade: TechCardGrade;
}
const { title, grade } = Astro.props as Props;
---

<div class="relative h-full w-min">
  <span
    class="mt-11 tracking-wide [writingMode:vertical-lr] [transform:rotate(180deg)] [fontFamily:bit]"
  >
    {title}
  </span>
  <div class="absolute bottom-1 block w-full text-center text-sm">
    {grade.tier}
  </div>
</div>
