---
import type { HTMLAttributes } from "astro/types";
import type { TechTitle } from "../data/TechStack";
import TechCard from "./TechCard/TechCard.astro";

interface Props extends HTMLAttributes<"div"> {
  cards: TechTitle[];
  isStacked?: boolean;
  hasGap?: boolean;
}

const { cards, isStacked, hasGap, class: extraClass, ...attrs } = Astro.props;
---

<div
  class:list={[
    "flex max-w-fit mx-auto overflow-scroll p-2 snap-normal snap-x scroll-pl-5 bg-neutral rounded-xl",
    { "-space-x-26": isStacked },
    { "gap-4 ": hasGap },
    extraClass,
  ]}
  {...attrs}
>
  {cards.map((card) => <TechCard title={card} fadeBody={isStacked} />)}
</div>
