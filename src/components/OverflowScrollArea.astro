---
import type { HTMLAttributes } from "astro/types";
import { twMerge } from "tailwind-merge";

interface Props extends HTMLAttributes<"div"> {}

const { class: extraClass, ...attrs } = Astro.props;
---

<div
  class={twMerge(
    "scrollable-area flex mx-auto overflow-scroll p-4 xl:px-0 rounded-xl",
    extraClass
  )}
  {...attrs}
>
  <slot />
</div>

<style>
  .scrollable-area::-webkit-scrollbar {
    width: 5px;
    height: 5px;
  }
</style>
