---
interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props as Props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<a
  href={href}
  class:list={[className, "group transition duration-300"]}
  {...props}
  aria-current={isActive && "page"}
>
  <slot />
  <span
    class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-black"
  ></span>
</a>
<style>
  a {
    display: inline-block;
    text-decoration: none;
  }
  a[aria-current="page"] {
    font-weight: bolder;
    text-decoration: underline;
  }
</style>
